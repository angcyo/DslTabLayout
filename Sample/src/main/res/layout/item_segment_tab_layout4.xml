<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="40dp"
        app:tab_border_draw_item_background="false"
        app:tab_border_radius_size="45dp"
        app:tab_border_solid_color="@color/white"
        app:tab_border_stroke_color="#E74D6E"
        app:tab_border_stroke_width="1dp"
        app:tab_draw_border="true"
        app:tab_indicator_color="#EEE74D6E"
        app:tab_indicator_drawable="@drawable/indicator_round_background"
        app:tab_indicator_enable_flow="true"
        app:tab_indicator_height_offset="-6dp"
        app:tab_indicator_style="STYLE_BACKGROUND"
        app:tab_indicator_width_offset="-6dp"
        app:tab_item_is_equ_width="true"
        app:tab_deselect_color="#E74D6E"
        app:tab_enable_gradient_color="true"
        app:tab_select_color="@color/white"
        tools:dsl_default_index="0">

        <TextView
            style="@style/TabCommonItemStyle"
            android:text="首页" />

        <TextView
            style="@style/TabCommonItemStyle"
            android:text="消息" />

        <TextView
            style="@style/TabCommonItemStyle"
            android:text="联系人" />

        <TextView
            style="@style/TabCommonItemStyle"
            android:text="更多" />

    </com.angcyo.tablayout.DslTabLayout>

</FrameLayout>